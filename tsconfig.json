{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2020"],
		"sourceMap": false,
		"allowJs": false,

		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"suppressImplicitAnyIndexErrors": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDeclarationOnly": false,
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["/*"],
			"@js/*": ["./js/*"],
			"@libs/*": ["./js/libs/*"],
			"@style/*": ["./style/*"],
			"@fonts/*": ["./fonts/*"],
			"@images/*": ["./images/*"],
			"@components/*": ["./js/components/*"],
			"@store/*": ["./js/store/*"],
			"@pages/*": ["./js/pages/*"]
		}
	},
	"exclude": ["./node_modules"]
}
